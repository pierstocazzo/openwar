<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

    <screen id="start" controller="openwar.MenuAppState">

       

        <layer id="back_layer" childLayout="vertical">
            
            
            <panel height="10%" />
            
            <panel height="20%" width="100%" childLayout="center">
                <text id="new_game" font="ui/fonts/palatino.fnt" color="#f00f" text="New Game" >
                    <interact onPrimaryClick="startGame()" /> 
                </text>
            </panel>
            
                <panel height="20%" width="100%" childLayout="center">
                <text id="quick_battle" font="ui/fonts/palatino.fnt" color="#f00f" text="Quick Battle" >
                    <interact onPrimaryClick="quickBattle()" /> 
                </text>
            </panel>
            
            
            <panel height="20%" width="100%" childLayout="center">
                <text id="options" font="ui/fonts/palatino.fnt" color="#f00f" text="Options" >
                    <interact onPrimaryClick="" /> 
                </text>
            </panel>
            
            <panel height="20%" width="100%" childLayout="center">
                <text id="quit_game" font="ui/fonts/palatino.fnt" color="#f00f" text="Quit">
                    <interact onPrimaryClick="quitGame()" /> 
                </text>
            </panel>        
           
        </layer>
        
        
     
        
       
        
       
    </screen>
</nifty>
